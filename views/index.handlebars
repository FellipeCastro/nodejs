

<h2>Postagens recentes:</h2>

<div class="mb-2 mt-4">
    <a href="/admin/categorias">
        <button class="btn btn-success">Nova categoria</button>
    </a>
    
    <a href="/admin/postagens">
        <button class="btn btn-success">Nova postagem</button>
    </a>
</div>

<hr>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>{{categoria.nome}}</small> <br>
        <small>Data da publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h4>Nenhuma postagem registrada</h4>
{{/each}}