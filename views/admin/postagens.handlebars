<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small> <br>
            <small>{{categoria.nome}}</small> <br>

            <div class="btn-group">
                <a href="/admin/postagens/edit/{{_id}}">
                    <button class="btn btn-success mt-2">Editar</button>
                </a>
            </div>

            <div class="btn-group">
                <a href="/admin/postagens/deletar/{{_id}}">
                    <button class="btn btn-danger mt-2">Apagar</button>
                </a>
            </div>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}