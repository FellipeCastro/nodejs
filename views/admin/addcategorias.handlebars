{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}
{{/each}}

<h3>Nova Categoria: </h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post" autocomplete="off">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="Ex: Nova Categoria" class="form-control">
        
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" placeholder="Ex: nova-categoria"  class="form-control">
        
            <button type="submit" class="btn btn-success mt-3">Criar categoria</button>
        </form>
    </div>
</div>
